import("HUDFlags.msg");

void HUDFlagsMenu()
{
    while (true)
    {
        int selection = DescriptionMenu(Title_HUDFlags, Options_HUDFlags);
        switch (selection)
        {
            case -1:
                return;
            case 0:
                ToggleHUD();
                break;
        }
    }
}

void ToggleHUD()
{
    int hud = SystemMenu(Message_ToggleHUD, Options_OnOff);
    if (hud) 
    {
        // Turn Off HUD
        DATE_DISP(0);
        FLD_PANEL_DISP(0);
    }
    else
    {
        // Turn On HUD
        DATE_DISP(1);
        FLD_PANEL_DISP(1);
    }
}