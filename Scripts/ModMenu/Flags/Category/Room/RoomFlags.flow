import("RoomFlags.msg");

void RoomFlagsMenu()
{
    while (true)
    {
        switch (DescriptionMenu(Title_RoomFlags, Options_RoomFlags))
        {
            case -1:
                return;
            case 0:
                CollectibleFlagsMenu();
                break;
            case 1:
                FurnitureFlagsMenu();
                break;
        }
    }
}

void CollectibleFlagsMenu()
{
    while (true)
    {
        int selection = NameMenu(Title_CollectibleFlags, Options_CollectibleFlags);
        if (selection == -1)
            return;
        ToggleFlag(3456 + selection, true);
    }
}

